{
    "compilerOptions": {
        "strict": true,
        "module": "NodeNext",
        "target": "es2017",
        "baseUrl": "./",
        "paths": {
            "#*": ["./src/*"]
        },
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": false,
        "emitDeclarationOnly": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/**/*.test.*", "src/**/*.spec.*", "migrations"]
}
